{
	"name": "@cmmv/core",
	"version": "0.2.29",
	"description": "Contract-Model-Model-View (CMMV) - Minimalistic Node.js Server Framework",
	"scripts": {
		"prebuild": "rimraf dist && npm run clean",
		"postbuild": "npm run packages:move",
		"build": "rm -rf ./packages/**/*.tsbuildinfo && NODE_ENV=build tsc -b -v packages",
		"build:dev": "tsc -b -v packages --watch",
		"prebuild:prod": "npm run clean",
		"build:prod": "rm -rf ./packages/**/*.tsbuildinfo && tsc -b -v packages",
		"prod:packages": "tsc -b -v packages",
		"build:test": "rm -rf ./packages/**/*.tsbuildinfo && tsc -b -v packages",
		"dev": "rm -rf ./node_modules/@cmmv && NODE_ENV=dev nodemon",
		"clean:tsfiles": "find ./src -type f \\( -name '*.d.ts' -o -name '*.js' \\) -exec rm -f {} +",
		"clean:packages": "find ./packages -name 'node_modules' -prune -o -type f \\( -name '*.d.ts' -o -name '*.js' \\) -exec rm -f {} +",
		"clean": "npm run clean:tsfiles && npm run clean:packages > /dev/null 2>&1",
		"format": "prettier \"**/*.ts\" \"packages/**/*.json\" --ignore-path ./.prettierignore --write && git status",
		"test": "npm run build:test && npm run packages:move && mocha && npm run clean",
		"test:dev": "mocha -w --watch-files \"packages\" packages/**/*.spec.js",
		"test:cov": "nyc mocha packages/**/*.spec.ts --reporter spec",
		"lint": "concurrently 'npm run lint:packages' 'npm run lint:spec'",
		"lint:fix": "concurrently 'npm run lint:packages -- --fix' 'npm run lint:spec -- --fix'",
		"lint:packages": "eslint 'packages/**/**.ts' --no-ignore",
		"lint:spec": "eslint 'packages/**/**.spec.ts' --no-ignore",
		"prerelease": "gulp copy-misc",
		"packages:move": "gulp move",
		"changelog": "lerna-changelog",
		"release:lerna": "./node_modules/.bin/lerna publish --force-publish --exact -m \"chore: chore(@cmmv) publish %s release\"",
		"release": "npm run build:prod && npm run packages:move && npm run release:lerna && npm run clean",
		"prepare": "husky",
		"coverage": "nyc report --reporter=text-lcov | coveralls -v"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andrehrferreira/cmmv.git"
	},
	"author": "Andre Ferreira",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/andrehrferreira/cmmv/issues"
	},
	"homepage": "https://cmmv.io",
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">= 18.0.0"
	},
	"mocha": {
		"require": [
			"node_modules/reflect-metadata/Reflect.js",
			"hooks/mocha-init-hook.js"
		],
		"exit": true
	},
	"changelog": {
		"labels": {
			"type: feature :tada:": "Features",
			"type: bug :sob:": "Bug fixes",
			"type: enhancement :wolf:": "Enhancements",
			"type: docs :page_facing_up:": "Docs",
			"type: code style": "Code style tweaks",
			"dependencies": "Dependencies"
		}
	},
	"lint-staged": {
		"**/*.ts": [
			"prettier --ignore-path ./.prettierignore --write"
		],
		"packages/**/*.json": [
			"prettier --ignore-path ./.prettierignore --write"
		]
	},
	"devDependencies": {
		"@codechecks/client": "^0.0.50",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-angular": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@tirke/node-cache-manager-ioredis": "^3.6.0",
		"@types/browser-sync": "^2.29.0",
		"@types/bytes": "^3.1.4",
		"@types/cache-manager": "^4.0.6",
		"@types/chai": "^4.3.19",
		"@types/chai-as-promised": "^8.0.0",
		"@types/jest": "^29.5.13",
		"@types/mocha": "^10.0.8",
		"@types/node": "^22.5.4",
		"@types/sinon": "^17.0.3",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "7.18.0",
		"@typescript-eslint/parser": "7.18.0",
		"axios": "^1.7.7",
		"body-parser": "^1.20.3",
		"browser-sync": "^2.26.2",
		"bytes": "^3.1.2",
		"cache-manager": "^5.7.6",
		"cache-manager-redis-store": "^3.0.1",
		"chai": "^5.1.1",
		"chai-as-promised": "^8.0.0",
		"ci": "^2.3.0",
		"concurrently": "^9.0.1",
		"coveralls": "^3.1.1",
		"delete-empty": "^3.0.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-import": "2.29.1",
		"esm": "^3.2.25",
		"gulp": "^5.0.0",
		"gulp-clean": "^0.4.0",
		"html-minifier": "^4.0.0",
		"husky": "^9.1.6",
		"jest": "^29.7.0",
		"lerna": "^8.1.8",
		"lerna-changelog": "^2.2.0",
		"lint-staged": "^15.2.10",
		"listhen": "^1.7.2",
		"markdown-table": "^3.0.3",
		"mocha": "^10.7.3",
		"nodemon": "^3.1.4",
		"npm-run-all": "^4.1.5",
		"nyc": "^17.0.0",
		"prettier": "^3.3.3",
		"sinon": "^19.0.2",
		"sqlite3": "^5.1.7",
		"supertest": "^7.0.0",
		"terser": "^5.32.0",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typeorm": "^0.3.6",
		"typescript": "^5.6.2",
		"uglify-js": "^3.19.3",
		"ws": "^8.18.0"
	},
	"dependencies": {
		"@cmmv/body-parser": "^0.0.11",
		"@cmmv/compression": "^0.0.11",
		"@cmmv/cookie-parser": "^0.0.11",
		"@cmmv/cors": "^0.0.11",
		"@cmmv/etag": "^0.0.11",
		"@cmmv/helmet": "^0.0.11",
		"@cmmv/reactivity": "^0.1.0",
		"@cmmv/server": "^0.0.11",
		"@cmmv/server-static": "^0.0.11",
		"@fastify/compress": "^8.0.1",
		"@fastify/cors": "^10.0.1",
		"@fastify/helmet": "^12.0.1",
		"@fastify/secure-session": "^8.1.0",
		"@fastify/static": "^8.0.1",
		"@fastify/view": "^10.0.1",
		"@swc-node/core": "^1.13.3",
		"@swc-node/register": "^1.10.9",
		"@swc/core": "^1.7.26",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cron": "^3.1.7",
		"dotenv": "^16.4.5",
		"express": "^4.21.0",
		"express-session": "^1.18.0",
		"fast-glob": "^3.3.2",
		"fastify": "^5.0.0",
		"jsonwebtoken": "^9.0.2",
		"protobufjs": "^7.4.0",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"rxjs": "^7.8.1",
		"tough-cookie": "^5.0.0",
		"tslib": "^2.7.0",
		"uuid": "^10.0.0"
	},
	"nyc": {
		"include": [
			"packages/**/*.ts"
		],
		"exclude": [
			"**/*.js",
			"**/*.d.ts",
			"**/*.spec.ts",
			"packages/**/adapters/*.ts",
			"packages/**/tests/**/*.ts"
		],
		"extension": [
			".ts"
		],
		"require": [
			"ts-node/register"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"sourceMap": true,
		"instrument": true
	},
	"peerDependencies": {
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.30.0"
	},
	"resolutions": {
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.30.0"
	}
}
